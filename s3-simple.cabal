category:            Network
build-type:          Simple
extra-source-files:  Network.AWS.S3Simple
                    ,Network.AWS.S3SimpleAdapters
                    ,Network.AWS.S3SimpleTypes
                    ,Test  
cabal-version:       >=1.10

